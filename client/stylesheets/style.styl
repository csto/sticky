dark = #2D2E3B
light = white
gold = #E4A100

body
  position:absolute
  top:0px
  left:0px
  right:0px
  bottom:0px
  overflow:hidden
  font-size:16px
  
input:focus
  outline:0
  
#simple-layout
  background:url('pw_maze_white.png')
  min-height:100%
  .panel
    margin:0 auto
    max-width:500px
    margin-top:80px
    border:1px solid #B8B8BC
    box-shadow:inset #FCFCFF 0px 0px 0px 1px, #8C8E90 0px 1px 3px
    border-radius:2px
    .panel-heading
      background:#fafafc
      font-weight:bold
      text-transform:uppercase
    .panel-body
      background:#f1f1f3
    .form-control
      box-shadow:none
    .form-group
      position:relative
      i.fa
        position:absolute
        right:14px
        top:33px
        color:#CDCDD0
        font-size:18px

#session-links
  margin-top:20px
  font-size:14px
  color:#717480

.btn-primary
  min-width:200px
  border:0
  background:gold
  
#content
  position:absolute
  z-index:1
  top:60px
  left:0px
  right:0px
  bottom:0px
  overflow:auto
  transition: 0.1s ease-out
  background:#C2C2C2
  &.active
    overflow:hidden
    
#notes-wrapper
  position:absolute
  top:0px
  left:0px
  right:0px
  bottom:0px
  -webkit-transform: translate3d(0px, 0px, 0px)
  -khtml-transform: translate3d(0px, 0px, 0px)
  -moz-user-transform: translate3d(0px, 0px, 0px)
  -ms-user-transform: translate3d(0px, 0px, 0px)
  transform: translate3d(0px, 0px, 0px)
  z-index:1
  &.slide
    transition: 0.3s ease-out
    -webkit-transform: translate3d(300px, 0px, 0px)
    -khtml-transform: translate3d(300px, 0px, 0px)
    -moz-user-transform: translate3d(300px, 0px, 0px)
    -ms-user-transform: translate3d(300px, 0px, 0px)
    transform: translate3d(300px, 0px, 0px)
  
a, a:visited, a:hover
  text-decoration:none
  
.noselect
  -webkit-touch-callout: none
  -webkit-user-select: none
  -khtml-user-select: none
  -moz-user-select: none
  -ms-user-select: none
  user-select: none
  
header
  position:absolute
  left:0px
  right:0px
  height:60px
  line-height:60px
  background:dark
  border-radius:0
  border:0
  #logo
    color:white
    font-size:24px
  #search-wrapper
    position:relative
    height:120px
    top:-60px
    transition:0.3s ease-out
    transform: translate3d(0px, 0px, 0px)
    &.search
      transform: translate3d(0px, 60px, 0px)
    .nav-link, .search-link
      line-height:60px
      padding:0px 15px
      position:absolute
      top:60px
      &.nav-left
        left:0px
      &.nav-right
        right:0px
      &.centered
        right:56px
        left:56px
        text-align:center
        > a
          top:0px
      > a
        cursor:pointer
        position:relative
        top:3px
        i.fa
          font-size:28px
          color:white
          text-shadow:none
    .search-link
      position:absolute
      top:0px
      &.search-left
        left:0px
      &.search-right
        right:0px
    #search-form
      height:60px
      left:60px
      right:60px
      input
        width:100%
        background:none
        border:none
        border-radius:0px
        outline:none
      
sidebar
  position:absolute
  left:0px
  top:0px
  bottom:0px
  width:100%
  max-width:300px
  
#actions
  margin:15px 15px 15px 15px
  box-shadow:none
  border:0

#dropdown-menu
  transform: scale(0.5, 0)
  opacity:0
  background:white
  list-style:none
  position:absolute
  right:0px
  &.active
    transition: 0.2s ease-out
    transform-origin: right 0px
    transform: scale(1, 1)
    opacity:1

.new.show
  margin:0px 15px

#notes, #new-note
  margin:0px 15px
  .note
    overflow:auto
    -webkit-overflow-scrolling: touch
    position:relative
    box-shadow:none
    border:0
    border-radius:2px
    .cover
      position:absolute
      top:0px
      left:0px
      right:0px
      bottom:0px
      z-index:2
      cursor:pointer
    .title
      position:relative
      margin-bottom:0px
      input
        font-weight:bold
    .form-group, .content
      margin:0px -10px
    .content
      margin-bottom:-18px
    input, textarea
      background:#C9C9C9
      border:0
      box-shadow:none
      &.completed
        text-decoration:line-through
        opacity:0.4
    textarea
      height:auto
      width:100%
    &.active
      position:relative
      z-index:2
      font-size:18px
      input, textarea
        font-size:18px
      textarea
        resize:none !important
    .task
      height:34px
      position:relative
      transform: translate(0px, 0px)
      margin:0px 40px 0px 10px
      &.active
        height:40px
        transition: 0.3s ease-out
        transform: translate(18px, 0px)
      &.ui-sortable-helper
        transition: 0s
      i.fa
        position:absolute
        top:10px
        left:-10px
        z-index:2
      .fa-check-square
        color:blue
      .task-input
        opacity:1
      .fa-bars
        top:0px
        left:0px
        transform: scale(0,1)
        font-size:18px
        &.active
          transition: 0.3s ease-out
          transform: scale(1,1)
          -webkit-transform-origin: 100% 50%
          
.note-animate
  opacity:1
  transition: 1s
  &.animate
    opacity:0
          
#messages
  position:absolute
  left:0px
  right:0px
  bottom:0px
  padding:30px
  .message
    position:relative
    z-index:2
    margin-top:10px
    padding:20px
    background:#383838
    border-radius:30px
    color:white